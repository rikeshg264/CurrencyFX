<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F4F7"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_back_arrow"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:tint="#222"
            android:layout_marginBottom="12dp" />

        <!-- TOP CARD: Flag + Name + Rate -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/currencyFlagImageView"
                android:layout_width="64dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_launcher_foreground" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp">

                <TextView
                    android:id="@+id/currencyNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#222"
                    tools:text="GBP / USD" />


                <TextView
                    android:id="@+id/exchangeRateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#1A5E20"
                    tools:text="1Â£ = 1.245" />


                <TextView
                    android:id="@+id/timestampTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#666"
                    tools:text="Updated 2025-02-10" />

            </LinearLayout>
        </LinearLayout>

        <!-- BOTTOM CARD: Converter -->
        <LinearLayout
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- LEFT SIDE: Input Fields -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <!-- Top input row -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/topAmountEditText"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="0"
                        android:inputType="numberDecimal"
                        android:textSize="20sp"
                        android:padding="12dp"
                        android:background="@android:drawable/edit_text" />

                    <TextView
                        android:id="@+id/topCurrencyCodeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:textSize="18sp"
                        android:textColor="#222"
                        android:textStyle="bold"
                        android:minWidth="60dp"
                        android:minHeight="32dp"
                        tools:text="GBP" />
                </LinearLayout>

                <!-- Bottom input row -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/bottomAmountEditText"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="0"
                        android:inputType="numberDecimal"
                        android:textSize="20sp"
                        android:padding="12dp"
                        android:background="@android:drawable/edit_text" />

                    <TextView
                        android:id="@+id/bottomCurrencyCodeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:textSize="18sp"
                        android:textColor="#222"
                        android:textStyle="bold"
                        android:minWidth="60dp"
                        android:minHeight="32dp"
                        tools:text="USD" />
                </LinearLayout>
            </LinearLayout>

            <!-- RIGHT SIDE: Swap Button -->
            <ImageButton
                android:id="@+id/swapButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@android:drawable/ic_menu_revert"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                app:tint="#222"
                android:layout_marginStart="20dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
